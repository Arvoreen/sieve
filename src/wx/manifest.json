{
  "name": "Sieve",
  "description": "Blab bla bla",
  "version": "2",
  "applications": {
    "gecko": {
      "id": "sieve@mozdev.org"
    }
  },
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2,
  "permissions": [
    "accountsRead", "tabs", "storage"
  ],

  "experiment_apis": {
    "SieveAccountsApi": {
      "schema": "api/sieve/SieveAccountsApi.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/sieve/SieveAccountsApi.js",
        "paths": [["sieve", "accounts"]]
      }
    },
    "SieveSessionApi": {
      "schema": "api/sieve/SieveSessionApi.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/sieve/SieveSessionApi.js",
        "paths": [["sieve", "session"]]
      }
    }

  }
}
